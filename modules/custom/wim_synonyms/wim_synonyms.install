<?php

/**
 * Implements hook_schema().
 */
function solr_synonyms_schema() {
  $schema = array();

  $schema['wim_synonyms'] = array(
    'description' => 'Table which saves synonyms for solr.',
    'fields' => array(
      'keyword' => array(
        'description' => 'The keyword.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
      ),
      'synonyms' => array(
        'description' => 'The synonyms of the keyword.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
      ),
    ),
    'primary key' => array('keyword'),
  );

  return $schema;
}

/**
 * Implementation of hook_uninstall().
 */
function solr_synonyms_uninstall() {
  drupal_uninstall_schema('wim_synonyms');
}